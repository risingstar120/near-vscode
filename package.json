{
  "name": "vsnear1",
  "displayName": "vsnear1",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onFileSystem:near",
    "onWebviewPanel:viewType"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "near.login",
        "title": "Login",
        "category": "NEAR.social"
      },
      {
        "command": "near.openWidgetsFromAccount",
        "title": "Open Account",
        "category": "NEAR.social"
      },
      {
        "command": "near.showWidgetPreview",
        "title": "Show Widget preview",
        "category": "NEAR.social",
        "enablement": "resourceScheme == near",
        "icon": "$(preview)"
      },
      {
        "command": "near.reloadWidgetPreview",
        "title": "Reload preview",
        "category": "NEAR.social",
        "enablement": "activeWebviewPanelId == 'WidgetPreview'",
        "icon": "$(refresh)"
      },
      {
        "command": "near.showWidgetPreviewSource",
        "title": "Show source",
        "category": "NEAR.social",
        "enablement": "activeWebviewPanelId == 'WidgetPreview'",
        "icon": "$(go-to-file)"
      }  
    ],
    "resourceLabelFormatters": [
      {
        "scheme": "near",
        "formatting": {
          "label": "${path}",
          "separator": "/",
          "workspaceSuffix": "NEAR"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceScheme == near",
          "command": "near.showWidgetPreview",
          "group": "navigation"
        },
        {
          "command": "near.reloadWidgetPreview",
          "when": "fasle && activeWebviewPanelId == 'WidgetPreview'",
          "group": "navigation"
        },
        {
          "command": "near.showWidgetPreviewSource",
          "when": "fasle && activeWebviewPanelId == 'WidgetPreview'",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "near.openWidgetsFromAccount"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "explorer",
        "contents": "To start, please login into your NEAR account: [Login With NEAR](command:near.login)",
        "when": "workbenchState == empty"
      }
    ]

  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.1",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@types/lodash": "^4.14.191",
    "lodash": "^4.17.21",
    "near-api-js": "^1.1.0"
  }
}
