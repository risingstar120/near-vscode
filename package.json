{
  "name": "near-social-ide",
  "displayName": "NEAR Social",
  "description": "VSCode extension for NEAR",
  "version": "1.0.4",
  "publisher": "near-protocol",
  "icon": "media/social-logo.png",
  "homepage": "https://github.com/near/near-vscode",
  "repository": {
    "type": "git",
    "url": "https://github.com/near/near-vscode"
  },
  "bugs": {
    "url": "https://github.com/near/near-vscode/issues",
    "email": "devrel-ops@near.org"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onFileSystem:near",
    "onWebviewPanel:viewType"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "near.login",
        "title": "Login",
        "category": "NEAR.social"
      },
      {
        "command": "near.openWidgetsFromAccount",
        "title": "View account in workspace",
        "category": "NEAR.social"
      },
      {
        "command": "near.startSocial",
        "title": "Setup Social Workbench",
        "category": "NEAR.social"
      },
      {
        "command": "near.chooseLocalPath",
        "title": "Choose Widget Folder",
        "category": "NEAR.social"
      },
      {
        "command": "near.publishWidget",
        "title": "Publish Widget",
        "category": "NEAR.social",
        "enablement": "resourceScheme == near",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "near.showWidgetPreview",
        "title": "Show Widget Preview",
        "category": "NEAR.social",
        "enablement": "resourceScheme == near",
        "icon": "$(preview)"
      }
    ],
    "resourceLabelFormatters": [
      {
        "scheme": "near",
        "formatting": {
          "label": "${path}",
          "separator": "/",
          "workspaceSuffix": "NEAR"
        }
      }
    ],
    "viewsWelcome": [
      {
        "view": "near-social",
        "contents": "[Choose your working folder](command:near.chooseLocalPath)",
        "when": "resourceScheme != near"
      },
      {
        "view": "near-social",
        "contents": "[Login & Fetch Widgets](command:near.login)",
        "when": "resourceScheme == near"
      },
      {
        "view": "near-social",
        "contents": "[Fetch Account Widgets](command:near.openWidgetsFromAccount)",
        "when": "resourceScheme == near"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "near-social",
          "name": "NEAR Social"
        }
      ]
    },
    "menus": {
      "editor/title": [
        {
          "when": "resourceScheme == near",
          "command": "near.showWidgetPreview",
          "group": "navigation"
        },
        {
          "when": "resourceScheme == near",
          "command": "near.publishWidget",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "near.openWidgetsFromAccount"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run -S esbuild-base -- --minify",
    "esbuild-base": "rimraf out && esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "build": "npm run -S esbuild-base -- --sourcemap",
    "watch": "tsc -watch -p ./",
    "fmt": "prettier --write \"src/**/*.ts\"&& npm run test -- --fix",
    "test": "eslint src --ext ts && tsc --noEmit"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.1",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "esbuild": "^0.17.10",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@types/lodash": "^4.14.191",
    "lodash": "^4.17.21",
    "near-api-js": "^1.1.0"
  }
}